{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "ES2020"],
    "rootDir": "configurator/js",
    "outDir": "dist/configurator/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false
  },
  "include": ["configurator/js/**/*"],
  "exclude": ["node_modules", "web", "dist"]
}
