# Ignore generated/runtime files from configurator
ecosystem.config.js
advanced.json
blocklist.json
secrets.json
ddns.json
certs.json
config.json
users.json

# Ignore everything in web/public by default (user-specific content)
web/public/*

# Allow the template/example files that are part of the repo
!web/public/401.html
!web/public/404.html
!web/public/api/
!web/public/radio/
!web/public/www/

# Ignore subfolders in api directory
web/public/api/*
!web/public/api/index.html

# Ignore subfolders in radio directory
web/public/radio/*
!web/public/radio/index.html

# Ignore subfolders in www directory
web/public/www/*
!web/public/www/index.html
!web/public/www/robots.txt

# Ignore everything in web/global by default
web/global/*

# Allow specific files/folders in web/global
!web/global/script.js
!web/global/style.css
!web/global/fonts/
!web/global/favicon/
!web/global/login/

# Ignore generated/runtime files in web/global
web/global/colors.json
web/global/favicon/*
!web/global/favicon/favicon.md

# Ignore everything in web/static by default
web/static/*

# Allow specific folders in web/static
!web/static/api/
!web/static/radio/
!web/static/www/

